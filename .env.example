# LangGraph Platform - Environment Configuration

# =============================================================================
# Langfuse Observability (Optional - R3)
# =============================================================================
# Obtain your Langfuse credentials from https://cloud.langfuse.com
# Leave blank to disable tracing (experiment mode default)

LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# =============================================================================
# API Authentication (R2)
# =============================================================================
# API key for hosted mode authentication
# Default: dev-key-12345 (development only)

LGP_API_KEY=dev-key-12345
LGP_AUTH_ENABLED=true

# =============================================================================
# PostgreSQL Checkpointer (R4)
# =============================================================================
# PostgreSQL connection for hosted mode checkpointer
# Leave blank to use SQLite (experiment mode default)

POSTGRES_URL=postgresql://user:password@localhost:5432/lgp_checkpoints
POSTGRES_POOL_SIZE=10

# =============================================================================
# Claude Code MCP (R5)
# =============================================================================
# Claude Code MCP server configuration

ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Runtime Configuration
# =============================================================================
# Environment mode: experiment or hosted
ENVIRONMENT=experiment

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
